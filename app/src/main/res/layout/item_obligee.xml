<?xml version="1.0" encoding="utf-8"?>
<com.android.memefish.langinfogather.ui.widget.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_obligee_edit"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/colorGlod"
            android:gravity="center"
            android:text="编辑" />

        <TextView
            android:id="@+id/item_obligee_delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/color_gray"
            android:gravity="center"
            android:text="删除" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_obligee_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cn.carbs.android.avatarimageview.library.AvatarImageView
            android:id="@+id/item_obligee_ic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            app:aiv_BoarderWidth="2dp"
            app:aiv_ShowBoarder="false"
            app:aiv_TextSizeRatio="0.4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/item_obligee_ic"
            android:layout_margin="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_obligee_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="100086"
                    android:textSize="18dp"
                    android:textColor="@color/color_black"/>
                <TextView
                    android:id="@+id/item_obligee_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="张三李四王五赵六刘七王八"
                    android:lines="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_black"
                    android:textSize="18dp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/item_obligee_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="未完成"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_obligee_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2018-07-25 22:13"
                    android:textColor="@color/color_gray"
                    android:textSize="12dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    >
                    <cn.carbs.android.avatarimageview.library.AvatarImageView
                        android:id="@+id/item_obligee_quanliren"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        app:aiv_BoarderWidth="1px"
                        app:aiv_TextColor="@color/color_white"/>
                    <cn.carbs.android.avatarimageview.library.AvatarImageView
                        android:id="@+id/item_obligee_fangwu"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        app:aiv_BoarderWidth="1px"
                        app:aiv_TextColor="@color/color_white"/>
                    <cn.carbs.android.avatarimageview.library.AvatarImageView
                        android:id="@+id/item_obligee_quanshulaiyuan"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        app:aiv_BoarderWidth="1px"
                        app:aiv_TextColor="@color/color_white"/>
                    <cn.carbs.android.avatarimageview.library.AvatarImageView
                        android:id="@+id/item_obligee_qita"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        app:aiv_BoarderWidth="1px"
                        app:aiv_TextColor="@color/color_white"/>
                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</com.android.memefish.langinfogather.ui.widget.SwipeItemLayout>
